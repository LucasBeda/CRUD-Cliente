@{
    ViewData["Title"] = "Login Page";
    @model Usuario

}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <form class="form-signin" asp-controller="Login" asp-action="Login" method="post">
                    <input type="text" class="form-control" placeholder="Nome" asp-for="Nome" autofocus required>
                    <input type="password" class="form-control" placeholder="Senha" asp-for="Senha" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Logar</button>
                    <span class="clearfix"></span>
                </form>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </div>
</div>